{
  "manifest_version": 3,
  "name": "YT Audio extractor",
  "version": "1.0.0",
  "description": "This extension extracts audio from the current playing YT video.",
  "icons": { 
    "16": "demo.png",
    "48": "downloadicon.png",
   "128": "demo.png" 
  },
  "content_scripts": [
    {
      "matches": ["https://www.google.com/"],
      "js": ["scripts/index.js"]
    },
    {
      "matches": ["https://www.youtube.com/watch?v=*"],
      "js": ["scripts/videoContent.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_icon": "convert_to_audio.png",
    "default_popup": "popup/popup.html"
  }
}